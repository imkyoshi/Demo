<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
    stopOnFailure="false"
    backupGlobals="false"
    beStrictAboutTestsThatDoNotTestAnything="true"
    beStrictAboutOutputDuringTests="true"
    stopOnRisky="false"
    stopOnWarning="false"
    failOnWarning="true"
    failOnRisky="true">

    <testsuites>
        <testsuite name="Application Test Suite">
            <directory>test/auth/</directory>
            <directory>app/</directory>
            <directory>app/api/</directory>
            <directory>app/config/</directory>
            <directory>app/controller/</directory>
            <directory>app/Helpers/</directory>
            <directory>app/model/</directory>
            <directory>app/view/auth/</directory>
        </testsuite>
    </testsuites>

    <coverage>
        <include>
            <directory>app/</directory>
        </include>
        <exclude>
            <directory>app/tests/</directory>
        </exclude>
    </coverage>

</phpunit>
